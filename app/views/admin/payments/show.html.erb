<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header text-center"><%#= @admin_payment.client.name %> Payment Recieving</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= @admin_payment.client.name %> Payments
        <%#= link_to '<i class="fa fa-plus"></i> Add New client'.html_safe, new_admin_product_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="datatable">
            <thead>
                <tr>
                    <th>Payment#</th>
                    <th>Payment Date</th>
                    <th>Payemnt Type</th>
                    <th>amount</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>

              <%# if @admin_client.orders.present? %>
                <tr class="odd gradeX">
                  <!-- <td><%#= index+1 %></td> -->
                  <td><%= @admin_payment.id %></td>
                  
                  <td><%= @admin_payment.created_at.strftime("%B-%d-%Y") %></td>

                  <td>
                     <%= @admin_payment.payment_type %>
                  </td>
                   <td>
                     <%= @admin_payment.amount %>
                  </td>
                  <td>
                     <%= @admin_payment.description %>
                  </td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="center">
      <span class ="signature">Signature: <span class = "line"></span></span>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-6">
    <button class="btn btn-primary" onclick="print()" style="float: left;">Print</button>
  </div>
</div>
<style type="text/css">
.center {
  float: right;
  font-weight: 700;
  margin-top: 20px;
}
  .date > .line, .signature > .line {
  display: inline-block;
  border-bottom: 1px solid #000;
  width: 150px;
}
</style>
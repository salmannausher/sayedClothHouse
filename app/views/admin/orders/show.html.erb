
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Orders</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Orders
        <%#= link_to '<i class="fa fa-plus"></i> Add New client'.html_safe, new_admin_product_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Than</th>
                    <th>Item Name</th>
                    <th>Gazana per Than</th>
                    <th>Meters</th>
                    <th>Price Per Meter</th>
                    <th>Total amount</th>
                    
                </tr>
            </thead>
            <tbody>

              <% @admin_order.line_items.each_with_index do |line_item| %>
                <tr class="odd gradeX">
                  <!-- <td><%#= index+1 %></td> -->
                  <td><%= line_item.id %></td>
                  <td><%= line_item.than %></td>
                  <td><%= line_item.product.name %></td>
                  <td><%= line_item.gaz_per_than %></td>
                  <td><%= line_item.meter %></td>
                  <td><%= line_item.price_per_meter %></td>
                  <td><%= line_item.line_total %></td>
                  
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
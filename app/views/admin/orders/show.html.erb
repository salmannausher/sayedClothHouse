
<div class="row">
  <div class="col-lg-12 header-print">
    <h1 class="page-header">Order #<%= @admin_order.id %></h1>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 sub_header">
    <ul style="list-style: none;">
      <li>Party Name : <%= @admin_order.client.name %></li>
      <li>Gazana #<%= @admin_order.gazana_num %></li>
      <li>Order Date : <%= @admin_order.created_at %></li>
      <li>Date : <%= Date.today %></li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Orders
        <%#= link_to '<i class="fa fa-plus"></i> Add New client'.html_safe, new_admin_product_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover print-area" id="dataTables-example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Than</th>
                    <th>Item Name</th>
                    <th>Gazana per Than</th>
                    <th>Meters</th>
                    <th>Price Per Meter</th>
                    <th>Total amount</th>
                    
                </tr>
            </thead>
            <tbody>

              <% @admin_order.line_items.each_with_index do |line_item,index| %>
                <tr class="odd gradeX">
                  <td><%= index+1 %></td> 
                  <!-- <td><%#= line_item.id %></td> -->
                  <td><%= line_item.than %></td>
                  <td><%= line_item.product.name %></td>
                  <td><%= line_item.gaz_per_than %></td>
                  <td><%= line_item.meter %></td>
                  <td><%= line_item.price_per_meter %></td>
                  <td><%= line_item.line_total %></td>
                  
                </tr>
              <%end%>  

              </div>                                                                           
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <button class="btn btn-primary" onclick="print()" style="float: left;">Print</button>
  </div>
  <div class="col-lg-6 grand_total_print">
    <span style="float: right;">
     <strong>Total:</strong> Rs.  <%= @admin_order.total_without_cargo %>
    </span>
    <br>
    <span style="float: right;">
     <strong>Cargo Charges:</strong>  Rs. <%= @admin_order.shipping_charges.to_i %>
    </span>
    <br>
    <span style="float: right;">
     <strong>Grand Total:</strong> Rs. <%= @admin_order.grand_total %>
    </span>
  </div>
</div>
<style type="text/css">
  @media print {
  body * {
    visibility: hidden;
  }
  .sub_header * {
    visibility: visible;
  }
  .grand_total_print * {
    visibility: visible;
  }
  .grand_total_print {
    padding-top: 40px;
  }
  .print-area  * {
    visibility: visible;
  }
  .header-print * {
     visibility: visible;
  }
  .print-area {
    position: absolute;
    left: 0;
    top: 0;
  }
}
</style>


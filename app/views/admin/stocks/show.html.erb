
<div class="row" style="padding-top: 20px;">
	<div class="col-lg-3 col-md-6">
	    <div class="panel panel-primary">
	        <div class="panel-heading">
	            <div class="row">
	                <div class="col-xs-3">
	                    <i class="fa fa-user fa-5x"></i>
	                </div>
	                <div class="col-xs-9 text-right">
	                    <div class="huge"><%= @admin_stocks.sum(:meter)%></div>
	                    <div>Stock in meters</div>
	                </div>
	            </div>
	        </div>
            <div class="panel-footer">
                <span class="pull-left"><%#= @admin_stocks.first.product.name %></span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
	    </div>
	</div>
  <div class="col-lg-12">
    <h1 class="page-header">Stock</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Stock Detail
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Than</th>
                    <th>Gazana per Than</th>
                    <th>Meters</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>

              <% @admin_stocks.each_with_index do |admin_stock,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                 	<td><%= admin_stock.than  %></td>
                 	<td><%= admin_stock.gazana_per_than %></td>
                 	<td><%= admin_stock.meter.to_f %></td>
                 	<td><%= admin_stock.created_at.strftime("%B-%d-%Y") %></td>
                  <td><%= link_to '',  admin_stock_path(admin_stock), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete fa fa-trash icon_link with-tip no-text" , title: "delete" %></td>
                </tr>
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

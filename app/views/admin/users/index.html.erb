
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">All Users</h1>
  </div>
  
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= t 'admin.Users'%>
        <%= link_to '<i class="fa fa-plus"></i> Add New User'.html_safe, new_admin_user_path, class: "btn btn-default pull-right add-btn" %>
      </div>
      <div class="panel-body">
        <div class="dataTable_wrapper">
          <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>All Users</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th class="text-center">Actions</th>
                    
                </tr>
            </thead>
            <tbody>

              <% @admin_users.each_with_index do |admin_user,index| %>

                <tr class="odd gradeX">
                  <td><%= index+1 %></td>
                  <td><%= admin_user.email %></td>
                  <td><%= admin_user.roles.first.name%></td>
                  <td class="text-center">
                      <span>
                      <%= link_to '', edit_admin_user_path(admin_user) ,class: "edit fa fa-edit icon_link with-tip no-text", title: "edit"%>&nbsp; &nbsp;
                      </span>
                      <span>
                     
                      <%= link_to '',  admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' } ,class: "delete fa fa-trash icon_link with-tip no-text" , title: "delete" %>
                          
                      </span>
                  </td>
                </tr>
              <%end%>                                                                             
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

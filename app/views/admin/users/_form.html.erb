<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
       Client
      </div>
      <div class="panel-body">
        <div class="row">
          <%= form_for [:admin, @admin_user] do |f| %>
            <div class="col-md-6">

              <div class="form-group">
                <%=f.label :email%>
                <%=f.email_field :email ,class: 'form-control', placeholder: 'Enter Email', required: 'true'%>
              </div>
              <%if params[:action] == 'new' || params[:action] == 'edit'%>
              <div class="form-group">
                <%=f.label :password%>
                <%=f.text_field :password ,class: 'form-control', placeholder: 'Eneter password', required: 'true', :minlength=> 6%>
              </div>
              <div class="form-group">
                <%=f.label :role_ids%>
                <%= f.select :role_ids, options_for_select(Role.all.collect { | client | [client.name, client.id] }, f.object.try(:role_ids)), {}, {:class => 'form-control' } %>
              </div>
             <%end%>

              <%= f.submit 'Submit Button', class: "btn btn-default" %>
              <button type="reset" class="btn btn-default">Reset Button</button>
              <a  href="/admin/users" class="btn btn-default">Back</a>
            </div>

          <%end%>
        </div>
      </div>        
    </div>
  </div>    
</div>

